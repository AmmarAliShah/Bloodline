﻿@model Bloodline.Models.staff
@{
    /**/

    Layout = null; }

@using (Html.BeginForm("AddOrEdit", "Admin", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.staffID)
    <div class="form-group">
        @Html.LabelFor(model => model.staffName, new { @class = "control-label" })
        @Html.EditorFor(model => model.staffName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.staffName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.staffDOB, new { @class = "control-label" })
        @Html.EditorFor(model => model.staffDOB, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.staffDOB)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.staffPhone, new { @class = "control-label" })
        @Html.EditorFor(model => model.staffPhone, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.staffGender, new { @class = "control-label" })
        @Html.EditorFor(model => model.staffGender, new { htmlAttributes = new { @class = "form-control" } })
    </div>



    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}