﻿@model Bloodline.Models.donor

@{
    /**/

    Layout = null;
    }

@using (Html.BeginForm("AddOrEdit", "Staff", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.donorID)
    <div class="form-group">
        @Html.LabelFor(model => model.donorName, new { @class = "control-label" })
        @Html.EditorFor(model => model.donorName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.donorName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.donorDOB, new { @class = "control-label" })
        @Html.EditorFor(model => model.donorDOB, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.donorDOB)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.donorPhone, new { @class = "control-label" })
        @Html.EditorFor(model => model.donorPhone, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.donorGender, new { @class = "control-label" })
        @Html.EditorFor(model => model.donorGender, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}